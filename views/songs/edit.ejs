<%- include('../partials/header') %>

<h1 class="h1-font"><%= title %></h1>
&nbsp;
<div id="border">
    <form action="/songs/<%= song._id %>?_method=PUT" method="POST">
        <div>
            Song Title: <input class="form-control" type="text" name="title" value="<%= song.title %>">
        </div>
        <div>
            Artist: <input class="form-control" type="text" name="artist" value="<%= song.artist %>">
        </div>
        Revised Caption: <textarea class="form-control" type="text" name="caption" ><%= song.caption %></textarea>
        <br>
        <div class="center">
            <button class="btn btn-secondary" type="submit">Update Post</button>
        </div>
    </form>
</div>

<%- include('../partials/footer') %>